<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Movie_10"
    android:background="@drawable/irony">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <HorizontalScrollView
            android:id="@+id/horizon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="400dp">

                <ImageView
                    android:layout_width="400dp"
                    android:layout_height="400dp"
                    android:src="@drawable/sto01"/>
                <ImageView
                    android:layout_width="400dp"
                    android:layout_height="400dp"
                    android:src="@drawable/sto02"/>
                <ImageView
                    android:layout_width="400dp"
                    android:layout_height="400dp"
                    android:src="@drawable/sto03"/>
            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/description01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/horizon"
            android:textColor="#fafafa"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Description:-In 'The Matrix,' a groundbreaking science fiction film, viewers are thrust into a dystopian world where reality is a simulated construct created by sentient machines to subdue humanity. The story follows Neo, a computer programmer turned reluctant hero, as he discovers the truth about the Matrix and joins a group of rebels fighting to free humanity from its digital imprisonment. Through visually stunning action sequences and thought-provoking philosophical themes, 'The Matrix' challenges perceptions of reality, identity, and the nature of existence. With its innovative storytelling and iconic visual effects."/>

        <ImageView
            android:id="@+id/imdb01"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_below="@+id/description01"
            android:layout_alignParentRight="true"
            android:layout_marginTop="33dp"
            android:src="@drawable/imdb01"
            android:layout_marginRight="50dp"/>

        <ImageView
            android:id="@+id/imdb001"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/description01"
            android:layout_marginTop="33dp"
            android:src="@drawable/imdimage"
            android:layout_marginLeft="50dp"/>

        <ImageView
            android:id="@+id/imdb02"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_below="@+id/imdb01"
            android:layout_alignParentRight="true"
            android:layout_marginTop="33dp"
            android:src="@drawable/birot"
            android:layout_marginRight="50dp"/>

        <ImageView
            android:id="@+id/imdb002"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/imdb01"
            android:layout_marginTop="33dp"
            android:src="@drawable/rotei"
            android:layout_marginLeft="50dp"/>

        <Button
            android:id="@+id/watch_now_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imdb002"
            android:drawableLeft="@drawable/circle_40"
            android:text="Watch Now"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="90dp"
            android:layout_marginLeft="90dp"
            android:background="#ffff00"/>
    </RelativeLayout>
</ScrollView>