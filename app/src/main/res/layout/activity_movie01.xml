<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Movie_01"
    android:background="@drawable/irony">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <HorizontalScrollView
        android:id="@+id/horizon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="400dp">

            <ImageView
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:src="@drawable/i01"/>
            <ImageView
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:src="@drawable/i02"/>
            <ImageView
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:src="@drawable/i03"/>
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/description01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/horizon"
        android:textColor="#fafafa"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Description:- Iron Man 2 delves deeper into Tony Stark's struggle with his dual identity as a billionaire playboy and a superhero. Facing pressure from the government to share his technology and a new villain, Whiplash, Stark must confront his own vulnerabilities. The film explores themes of legacy, responsibility, and the consequences of unchecked power. With electrifying action sequences and witty dialogue, "/>

        <ImageView
            android:id="@+id/imdb01"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_below="@+id/description01"
            android:layout_alignParentRight="true"
            android:layout_marginTop="33dp"
            android:src="@drawable/imdb01"
            android:layout_marginRight="50dp"/>

        <ImageView
            android:id="@+id/imdb001"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/description01"
            android:layout_marginTop="33dp"
            android:src="@drawable/imdimage"
            android:layout_marginLeft="50dp"/>

        <ImageView
            android:id="@+id/imdb02"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/imdb01"
            android:layout_alignParentRight="true"
            android:layout_marginTop="33dp"
            android:src="@drawable/birot"
            android:layout_marginRight="50dp"/>

        <ImageView
            android:id="@+id/imdb002"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/imdb01"
            android:layout_marginTop="33dp"
            android:src="@drawable/rotei"
            android:layout_marginLeft="50dp"/>

        <Button
            android:id="@+id/watch_now_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imdb002"
            android:drawableLeft="@drawable/circle_40"
            android:text="Watch Now"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="90dp"
            android:layout_marginLeft="90dp"
            android:background="#ffff00"/>
    </RelativeLayout>
</ScrollView>